# Production Environment Configuration
# Copy this to .env.production and fill in actual values

# Application Configuration
NODE_ENV=production
VITE_APP_NAME="Stream Manager"
VITE_APP_VERSION=$npm_package_version

# Supabase Configuration (Public keys only - never commit service keys)
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key

# API Configuration
VITE_API_URL=https://api.your-domain.com
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# External Services
VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

VITE_POSTHOG_KEY=your-production-posthog-key
VITE_POSTHOG_HOST=https://app.posthog.com

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PWA=true

# Security
VITE_ENABLE_HTTPS_REDIRECT=true
VITE_CSP_REPORT_URI=https://your-domain.com/api/csp-report